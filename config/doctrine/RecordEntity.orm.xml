<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping
    xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
    https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="App\Entity\RecordEntity" table="records">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO" />
        </id>

        <field name="title" column="title" type="string" />
        <field name="author" column="author" type="string" />
        <field name="description" column="description" type="string" />
        <field name="releaseDate" column="release_date" type="date" />
        <field name="price" column="price" type="float" />
    </entity>
</doctrine-mapping>
